<% content_for :head do %>
  <style>
    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    @keyframes slideUp {
      0% { opacity: 0; transform: translateY(30px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in { animation: fadeIn 0.6s ease-in-out; }
    .animate-slide-up { animation: slideUp 0.5s ease-out; }
  </style>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
  <div class="container mx-auto px-4 py-6 lg:py-12">
    <!-- Header -->
    <div class="text-center mb-8 animate-fade-in">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-2xl mb-6 shadow-2xl">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
        </svg>
      </div>
      <h1 class="text-3xl lg:text-4xl font-bold text-white mb-2">Inspections Pro</h1>
      <p class="text-slate-300 text-sm lg:text-base">Edit account</p>
    </div>

    <!-- Main Content -->
    <div class="max-w-lg mx-auto">
      <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-6 lg:p-8 border border-white/20 shadow-2xl animate-slide-up">
        
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="bg-red-500/10 border border-red-500/20 rounded-2xl p-4 mb-6 animate-slide-up">
            <div class="flex items-center mb-3">
              <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3 class="text-red-400 font-semibold">Please fix the following errors:</h3>
            </div>
            <ul class="text-red-300 text-sm space-y-1 ml-7">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Sign Up Form -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
          
          <!-- Profile Avatar -->
          <div class="space-y-2">
            <%= f.label :avatar, "Profile Photo", class: "block text-white font-semibold text-sm lg:text-base" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <%= f.file_field :avatar,
                  class: "w-full bg-white/5 border border-white/20 rounded-xl py-3 pl-12 pr-4 text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:bg-indigo-600 file:text-white hover:file:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" %>
            </div>
          </div>

          <!-- Name Field -->
          <div class="space-y-2">
            <%= f.label :name, "Full Name", class: "block text-white font-semibold text-sm lg:text-base" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <%= f.text_field :name, 
                  autofocus: true, 
                  autocomplete: "name",
                  class: "w-full bg-white/5 border border-white/20 rounded-xl py-3 pl-12 pr-4 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200",
                  placeholder: "John Doe" %>
            </div>
          </div>

          <!-- Email Field -->
          <div class="space-y-2">
            <%= f.label :email, "Email Address", class: "block text-white font-semibold text-sm lg:text-base" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                </svg>
              </div>
              <%= f.email_field :email, 
                  autocomplete: "email",
                  class: "w-full bg-white/5 border border-white/20 rounded-xl py-3 pl-12 pr-4 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200",
                  placeholder: "you@email.com" %>
            </div>
          </div>

          <!-- Pending Reconfirmation Notice -->
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="bg-amber-500/10 border border-amber-500/20 rounded-2xl p-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-amber-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <p class="text-amber-300 text-sm">Currently waiting confirmation for: <span class="font-semibold"><%= resource.unconfirmed_email %></span></p>
              </div>
            </div>
          <% end %>

          <!-- Password Field -->
          <div class="space-y-2">
            <%= f.label :password, "Password", class: "block text-white font-semibold text-sm lg:text-base" %>
            <p class="text-slate-400 text-xs">Leave blank if you don't want to change it</p>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
              <%= f.password_field :password, 
                  autocomplete: "new-password",
                  class: "w-full bg-white/5 border border-white/20 rounded-xl py-3 pl-12 pr-4 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200",
                  placeholder: "••••••••" %>
            </div>
            <% if @minimum_password_length %>
              <p class="text-slate-400 text-xs"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>

          <!-- Password Confirmation -->
          <div class="space-y-2">
            <%= f.label :password_confirmation, "Confirm Password", class: "block text-white font-semibold text-sm lg:text-base" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password",
                  class: "w-full bg-white/5 border border-white/20 rounded-xl py-3 pl-12 pr-4 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200",
                  placeholder: "••••••••" %>
            </div>
          </div>

          <!-- Current Password -->
          <div class="space-y-2">
            <%= f.label :current_password, "Current Password", class: "block text-white font-semibold text-sm lg:text-base" %>
            <p class="text-slate-400 text-xs">We need your current password to confirm changes</p>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                </svg>
              </div>
              <%= f.password_field :current_password, 
                  autocomplete: "current-password",
                  class: "w-full bg-white/5 border border-white/20 rounded-xl py-3 pl-12 pr-4 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200",
                  placeholder: "••••••••" %>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-2">
            <%= f.submit "Update Account", 
                class: "w-full bg-gradient-to-r from-indigo-600 to-indigo-700 hover:from-indigo-700 hover:to-indigo-800 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-transparent" %>
          </div>

        <% end %>

        <!-- Divider -->
        <div class="my-8">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-white/20"></div>
            </div>
            <div class="relative flex justify-center">
              <span class="px-4 bg-slate-800 text-slate-400 text-sm">Account Options</span>
            </div>
          </div>
        </div>

        <!-- Danger Zone -->
        <div class="bg-red-500/5 backdrop-blur-sm rounded-2xl p-6 border border-red-500/20">
          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-red-500/20 rounded-lg flex items-center justify-center mt-1">
              <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-red-400 font-semibold mb-2">Cancel Account</h3>
              <p class="text-red-300 text-sm mb-4">Unhappy with our service? This action cannot be undone.</p>
              <%= button_to "Delete My Account", registration_path(resource_name), 
                  data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." }, 
                  method: :delete,
                  class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-xl transition-colors duration-200 text-sm" %>
            </div>
          </div>
        </div>

        <!-- Back Link -->
        <div class="mt-6 text-center">
          <%= link_to root_path, 
              class: "inline-flex items-center bg-slate-700 hover:bg-slate-600 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 transform hover:scale-[1.02]" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
            Go Back
          <% end %>
        </div>

      </div>

      <!-- Info Section -->
      <div class="mt-8 bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10 animate-fade-in">
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 bg-emerald-500/20 rounded-lg flex items-center justify-center mt-1">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-white font-semibold mb-2">Secure Profile Management</h3>
            <p class="text-slate-300 text-sm">Keep your profile information up to date. All changes are encrypted and stored securely to maintain your account integrity.</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
