<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Form Templates</h1>
    <%= link_to "Upload New Template", new_form_template_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @form_templates.empty? %>
    <p class="text-gray-700">No form templates uploaded yet.</p>
  <% else %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white shadow-md rounded-lg">
        <thead class="bg-gray-200">
          <tr>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Original Filename</th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">File Type</th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @form_templates.each do |template| %>
            <tr>
              <td class="py-4 px-6 whitespace-nowrap"><%= template.name %></td>
              <td class="py-4 px-6 whitespace-nowrap"><%= template.original_filename %></td>
              <td class="py-4 px-6 whitespace-nowrap"><%= template.file_type %></td>
              <td class="py-4 px-6 whitespace-nowrap">
                <%= link_to "Show", form_template_path(template), class: "text-blue-600 hover:text-blue-900 mr-2" %>
                <%= link_to "Delete", form_template_path(template), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>