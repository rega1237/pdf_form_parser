<% content_for :head do %>
  <style>
    #submitFormBtn {
      display: none;
    }

    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    @keyframes slideUp {
      0% { opacity: 0; transform: translateY(30px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.8; }
    }
    .animate-fade-in { animation: fadeIn 0.6s ease-in-out; }
    .animate-slide-up { animation: slideUp 0.5s ease-out; }
    .animate-pulse-custom { animation: pulse 2s infinite; }

    /* Estilos para checkbox como botón */
    .checkbox-button {
      position: relative;
      display: inline-block;
      width: 100%;
    }
    
    .checkbox-button input[type="checkbox"] {
      display: none;
    }
    
    .checkbox-button-label {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 16px 20px;
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      border: 2px solid #dc2626;
      border-radius: 16px;
      color: #7f1d1d;
      font-weight: 600;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-align: center;
      min-height: 60px;
      box-shadow: 0 4px 8px rgba(220, 38, 38, 0.15);
    }
    
    .checkbox-button-label:hover {
      background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
      border-color: #b91c1c;
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(220, 38, 38, 0.25);
    }
    
    .checkbox-button input[type="checkbox"]:checked + .checkbox-button-label {
      background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
      border-color: #7f1d1d;
      color: white;
      box-shadow: 0 6px 16px rgba(220, 38, 38, 0.4);
    }
    
    .checkbox-button input[type="checkbox"]:checked + .checkbox-button-label::before {
      content: "✓";
      margin-right: 8px;
      font-size: 18px;
      font-weight: bold;
    }

    /* Estilos responsivos para tabletas */
    @media (min-width: 768px) {
      .tablet-optimized {
        font-size: 18px;
      }
      
      .checkbox-button-label {
        font-size: 18px;
        padding: 20px 24px;
        min-height: 70px;
      }
      
      input[type="text"], select {
        font-size: 18px !important;
        padding: 16px 20px !important;
      }
    }

    /* Mejoras para campos de formulario */
    .form-input {
      background: rgba(255, 255, 255, 0.95) !important;
      border: 2px solid #1e40af !important;
      color: #1e3a8a !important;
    }
    
    .form-input:focus {
      background: rgba(255, 255, 255, 1) !important;
      border-color: #1d4ed8 !important;
      box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.2) !important;
    }
    
    .form-input::placeholder {
      color: #1e40af !important;
      opacity: 0.7;
    }

    .form-select {
      background: rgba(255, 255, 255, 0.95) !important;
      border: 2px solid #1e40af !important;
      color: #1e3a8a !important;
    }
    
    .form-select:focus {
      background: rgba(255, 255, 255, 1) !important;
      border-color: #1d4ed8 !important;
      box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.2) !important;
    }
  </style>
<% end %>

<div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900">
  <div class="container mx-auto px-4 py-6 lg:py-12">
    <!-- Flash Messages Container -->
    <div class="flash-messages fixed top-20 left-0 right-0 z-40 p-4"></div>

    <!-- Header con navegación -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 animate-fade-in">
      <div class="mb-4 sm:mb-0">
        <h1 class="text-2xl lg:text-4xl font-bold text-white mb-2 tablet-optimized">
          <%= @form_fill.name %>
        </h1>
        <p class="text-blue-200 text-base lg:text-lg tablet-optimized">
          Complete todos los campos requeridos para enviar la inspección
        </p>
      </div>
      
      <%= link_to form_fills_path, class: "inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-300 transform hover:scale-[1.02] shadow-lg hover:shadow-xl" do %>
        <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span class="text-base lg:text-lg">Volver a Plantillas</span>
      <% end %>
    </div>

    <!-- Contenido principal -->
    <div class="max-w-6xl mx-auto">
      <!-- Formulario principal -->
      <%= form_with model: @form_fill, url: form_fill_path(@form_fill), method: :patch, 
          data: { controller: "pagination form-fill", turbo: false, 
                  "form-fill-form-structure-value": @form_fill.form_structure, 
                  "form-fill-form-fields-value": @form_fields.to_json }, 
          local: true, 
          class: "space-y-8" do |form| %>
        
        <%= form.hidden_field :form_structure, id: 'form_fill_form_structure' %>
        
        <% if @form_fields.blank? %>
          <!-- Error: Sin campos -->
          <div class="bg-red-50 border-2 border-red-200 rounded-3xl p-8 animate-slide-up shadow-lg">
            <div class="flex items-center mb-4">
              <svg class="w-8 h-8 text-red-500 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3 class="text-red-600 font-bold text-xl">Formulario sin campos</h3>
            </div>
            <p class="text-red-700 text-lg">No hay campos disponibles en este formulario o la estructura no pudo ser procesada correctamente.</p>
          </div>
        <% else %>
          <!-- Indicador de progreso -->
          <% valid_fields = @form_fields.reject { |f| f['page_number'].to_i == 0 } %>
          <% pages = valid_fields.group_by { |f| f['page_number'].to_i }.sort_by { |page_num, _| page_num } %>
          <% total_pages = pages.length %>
          
          <div class="bg-slate-800/90 backdrop-blur-sm rounded-3xl p-6 border-2 border-blue-500 animate-fade-in shadow-lg">
            <div class="flex items-center justify-between mb-4">
              <span class="text-white font-bold text-lg">Progreso del Formulario</span>
              <span class="text-blue-300 text-base font-semibold" id="page-indicator">
                Página 1 de --
              </span>
            </div>
            <div class="w-full bg-slate-700 rounded-full h-3">
              <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-3 rounded-full transition-all duration-500" 
                   style="width: 0%" 
                   id="progress-bar"></div>
            </div>
          </div>

          <!-- Páginas del formulario -->
          <% pages.each_with_index do |(page_num, fields_on_page), page_index| %>
            <div class="page-content <%= page_index == 0 ? 'animate-slide-up' : 'hidden' %>" 
                 data-page-number="<%= page_num %>" 
                 data-pagination-target="pageContent">
              
              <div class="bg-slate-800/95 backdrop-blur-sm rounded-3xl p-8 lg:p-10 border-2 border-blue-400 shadow-2xl">
                <!-- Título de página -->
                <div class="mb-10">
                  <h2 class="text-2xl lg:text-3xl font-bold text-white mb-3">
                    Página <%= page_num %>
                  </h2>
                  <div class="w-20 h-2 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full"></div>
                </div>

                <!-- Secciones de la página -->
                <% fields_on_page.group_by { |f| f['section_name'].presence || "General" }.each do |section_name, fields_in_section| %>
                  <div class="mb-10 last:mb-0">
                    <!-- Título de sección -->
                    <div class="mb-8">
                      <div class="flex items-center mb-6">
                        <div class="w-12 h-12 bg-blue-500 rounded-2xl flex items-center justify-center mr-4 shadow-lg">
                          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                          </svg>
                        </div>
                        <h3 class="text-white font-bold text-xl lg:text-2xl">
                          <%= section_name.humanize %>
                        </h3>
                      </div>
                    </div>

                    <!-- Grid de campos -->
                    <div class="grid grid-cols-1 md:grid-cols-9 gap-6 items-end">
                      <% fields_in_section.each_with_index do |field, index| %>
                        <% next unless field.is_a?(Hash) && field.key?('name') %>
                        <% next if field['name'].blank? %>

                        <% column_width_int = field['column_width'].to_i %>
                        <% column_span = case column_width_int
                                         when 2
                                           'md:col-span-2'
                                         when 3
                                           'md:col-span-3'
                                         when 4
                                           'md:col-span-4'
                                         when 5
                                           'md:col-span-5'
                                         when 6
                                           'md:col-span-6'
                                         when 7
                                           'md:col-span-7'
                                         when 8
                                           'md:col-span-8'
                                         when 9
                                           'md:col-span-9'
                                         else
                                           'md:col-span-1'
                                         end %>

                        <div class="<%= column_span %> space-y-4">
                          <% field_id = "form_data_#{field['name'].parameterize.underscore}_#{section_name.parameterize.underscore}_#{index}" %>
                          
                          <% if field['type'] == "Button" %>
                          
                            <!-- Checkbox como botón -->
                            <div class="checkbox-button">
                              <%= check_box_tag "form_fill[#{field['name']}]",
                                  'Yes',
                                  field['value'] == 'Yes',
                                  { id: field_id } %>
                              
                              <label for="<%= field_id %>" class="checkbox-button-label">
                                <%= (field['label_name'].presence || field['name']).humanize %>
                              </label>
                            </div>
                          
                          <% elsif field['type'] == "Text" %>
                            <!-- Campo de texto -->
                            <div>
                              <%= form.label field['name'],
                                  (field['label_name'].presence || field['name']).humanize,
                                  for: field_id,
                                  class: "block text-white font-bold text-base lg:text-lg mb-3" %>
                              <div class="relative">
                                <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                                </svg>
                                <%= form.text_field field['name'],
                                    id: field_id,
                                    value: field['value'],
                                    class: "form-input w-full rounded-2xl py-4 pl-14 pr-4 text-base lg:text-lg font-medium focus:outline-none focus:ring-0 transition-all duration-200 shadow-md",
                                    placeholder: "     Ingrese #{(field['label_name'].presence || field['name']).humanize.downcase}" %>
                              </div>
                            </div>
                          
                          <% elsif field['type'] == "Choice" && field['options'].is_a?(Array) %>
                            <!-- Select -->
                            <div>
                              <%= form.label field['name'],
                                  (field['label_name'].presence || field['name']).humanize,
                                  for: field_id,
                                  class: "block text-white font-bold text-base lg:text-lg mb-3" %>
                              <div class="relative">
                                <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"></path>
                                </svg>
                                <%= form.select field['name'],
                                    options_for_select(field['options'].map { |option| [option.is_a?(Array) ? option.first : option, option.is_a?(Array) ? option.last : option] }, field['value']),
                                    { include_blank: 'Seleccione una opción' },
                                    id: field_id,
                                    class: "form-select w-full rounded-2xl py-4 pl-14 pr-4 text-base lg:text-lg font-medium focus:outline-none focus:ring-0 transition-all duration-200 appearance-none shadow-md" %>
                              </div>
                            </div>
                          
                          <% else %>
                            <!-- Campo no soportado -->
                            <div class="bg-amber-50 border-2 border-amber-200 rounded-2xl p-6 shadow-lg">
                              <div class="flex items-start space-x-3">
                                <svg class="w-6 h-6 text-amber-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                </svg>
                                <div>
                                  <h4 class="text-amber-800 font-bold mb-2 text-lg">
                                    <%= (field['label_name'].presence || field['name']).humanize %>
                                  </h4>
                                  <p class="text-amber-700 text-sm mb-2">
                                    Tipo: <span class="font-mono font-semibold"><%= field['type'] %></span>
                                  </p>
                                  <p class="text-amber-700 text-sm">
                                    Este tipo de campo aún no es compatible con la interfaz web
                                  </p>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Controles de navegación -->
          <div class="bg-slate-800/95 backdrop-blur-sm rounded-3xl p-8 border-2 border-blue-400 animate-fade-in shadow-2xl">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-6 sm:space-y-0">
              <!-- Botón Atrás -->
              <button type="button" 
                      id="backPageBtn" 
                      data-action="click->pagination#backPage" 
                      data-pagination-target="backPageBtn" 
                      class="inline-flex items-center bg-gray-500 hover:bg-gray-600 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-200 transform hover:scale-[1.02] disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none shadow-lg text-lg" 
                      disabled>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Página Anterior
              </button>

              <!-- Botones de acción -->
              <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
                <!-- Guardar Borrador -->
                <button type="button" 
                        id="saveDraftBtn" 
                        data-action="click->form-fill#saveDraft" 
                        class="inline-flex items-center justify-center bg-gradient-to-r from-cyan-500 to-cyan-600 hover:from-cyan-600 hover:to-cyan-700 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-200 transform hover:scale-[1.02] shadow-lg text-lg">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3-3m0 0l-3 3m3-3v12"></path>
                  </svg>
                  Guardar Borrador
                </button>

                <!-- Enviar Formulario (oculto inicialmente) -->
                <%= form.submit "Enviar Formulario", 
                    id: "submitFormBtn", 
                    data: { pagination_target: "submitFormBtn" }, 
                    class: "hidden items-center justify-center bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-300 transform hover:scale-[1.02] cursor-pointer shadow-lg text-lg" %>

                <!-- Siguiente Página -->
                <button type="button" 
                        id="nextPageBtn" 
                        data-action="click->pagination#nextPage click->form-fill#saveDraft" 
                        data-pagination-target="nextPageBtn" 
                        class="inline-flex items-center justify-center bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-300 transform hover:scale-[1.02] shadow-lg text-lg">
                  Siguiente Página
                  <svg class="w-5 h-5 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Sección de acciones adicionales -->
      <div class="bg-slate-800/90 backdrop-blur-sm rounded-3xl mt-8 p-8 border-2 border-blue-400 animate-fade-in shadow-lg">
        <div class="flex items-start space-x-4 mb-6">
          <div class="w-12 h-12 bg-emerald-500 rounded-2xl flex items-center justify-center mt-1 shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-white font-bold text-xl mb-2">Acciones del Formulario</h3>
            <p class="text-blue-300 text-base mb-4">Genere y administre su PDF de inspección final</p>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-6">
          <%= button_to 'Generar PDF', 
              submit_form_form_fill_path(@form_fill), 
              method: :post, 
              class: "inline-flex items-center justify-center bg-gradient-to-r from-emerald-500 to-emerald-700 hover:from-emerald-600 hover:to-emerald-800 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-300 transform hover:scale-[1.02] shadow-lg text-lg", 
              data: { confirm: "¿Está seguro de que desea generar y enviar el formulario PDF?" } %>
          
          <% if @form_fill.filled_pdf.attached? %>
            <div class="inline-flex items-center justify-center bg-gradient-to-r from-sky-500 to-sky-700 hover:from-sky-600 hover:to-sky-800 text-white font-bold py-4 px-8 rounded-2xl transition-all duration-300 transform hover:scale-[1.02] shadow-lg">
              <a href="<%= rails_blob_path(@form_fill.filled_pdf, disposition: 'inline') %>" target="_blank" class="text-white hover:text-white text-lg">
                Ver PDF
              </a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
