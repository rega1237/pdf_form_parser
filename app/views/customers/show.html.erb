<div>
  <h1 class="text-2xl font-bold mb-4">Customer Details</h1>

<div class="bg-white p-6 rounded-lg shadow-md">
  <% if @customer.thumbnail.attached? %>
    <%= image_tag @customer.thumbnail, class: "w-32 h-32 object-cover rounded-full mx-auto mb-4" %>
  <% else %>
    <p class="text-center text-gray-500 mb-4">No thumbnail available</p>
  <% end %>

  <p class="mb-2"><strong class="font-bold">Customer Type:</strong> <%= @customer.customer_type %></p>
  <p class="mb-2"><strong class="font-bold">Name:</strong> <%= @customer.name %></p>
  <p class="mb-2"><strong class="font-bold">Address:</strong> <%= @customer.address %></p>
  <p class="mb-2"><strong class="font-bold">City, State, Zip:</strong> <%= @customer.city_state_zip %></p>
  <p class="mb-2"><strong class="font-bold">Email:</strong> <%= @customer.email %></p>
  <p class="mb-2"><strong class="font-bold">Phone 1:</strong> <%= @customer.phone_1 %></p>
  <p class="mb-2"><strong class="font-bold">Phone 2:</strong> <%= @customer.phone_2 %></p>
  <p class="mb-2"><strong class="font-bold">Note:</strong> <%= @customer.note %></p>

  <div class="mt-4">
    <%= link_to "Edit", edit_customer_path(@customer), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
    <%= link_to "Back to Customers", customers_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
</div>
