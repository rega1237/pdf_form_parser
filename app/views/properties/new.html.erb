<h1 class="text-2xl font-bold mb-4">AÃ±adir Nueva Propiedad para <%= @customer.name %></h1>

<%= form_with(model: [@customer, @property], url: properties_path, local: true, class: "bg-white p-6 rounded-lg shadow-md") do |form| %>
  <%= form.hidden_field :customer_id, value: @customer.id %>

  <div class="mb-4">
    <%= form.label :property_type, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :property_type, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :property_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :property_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :address, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :address, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :city, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :city, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :zip_code, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :zip_code, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :construction_type, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :construction_type, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :note, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :note, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Create Property", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "Back to Customer", edit_customer_path(@customer), class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
  </div>
<% end %>