<%= form_with(model: inspection, local: true, class: 'space-y-6') do |form| %>
  <% if inspection.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(inspection.errors.count, "error") %> impidieron guardar esta inspecci√≥n:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% inspection.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :date, 'Fecha', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= form.date_field :date, 
          class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
    </div>

    <div>
      <%= form.label :status, 'Estado', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= form.select :status, 
          options_for_select([
            ['Pendiente', 'pending'],
            ['En Progreso', 'in_progress'],
            ['Completada', 'completed'],
            ['Cancelada', 'cancelled']
          ], inspection.status), 
          {}, 
          { class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' } %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= label_tag :customer_id, 'Cliente', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= select_tag :customer_id, 
          options_from_collection_for_select(@customers, :id, :name, @selected_customer&.id),
          { prompt: 'Selecciona un cliente', 
            class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
            id: 'customer_select' } %>
    </div>

    <div>
      <%= form.label :property_id, 'Propiedad', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= form.select :property_id, 
          options_from_collection_for_select(@properties, :id, ->(p) { "#{p.property_name} - #{p.address}" }, inspection.property_id),
          { prompt: 'Selecciona una propiedad' }, 
          { class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
            id: 'property_select' } %>
    </div>
  </div>

  <div>
    <%= form.label :form_template_id, 'Plantilla de Formulario', class: 'block text-sm font-medium text-gray-700 mb-1' %>
    <%= form.select :form_template_id, 
        options_from_collection_for_select(@form_templates, :id, :name, inspection.form_template_id),
        { prompt: 'Selecciona una plantilla de formulario' }, 
        { class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' } %>
  </div>

  <div>
    <%= form.label :notes, 'Notas', class: 'block text-sm font-medium text-gray-700 mb-1' %>
    <%= form.text_area :notes, rows: 4, 
        class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500' %>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to 'Cancelar', inspections_path, 
        class: 'bg-white border border-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md hover:bg-gray-50 transition duration-200' %>
    <%= form.submit class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200' %>
  </div>
<% end %>

<script>
// Cargar propiedades cuando se selecciona un cliente
document.getElementById('customer_select').addEventListener('change', function() {
  const customerId = this.value;
  const propertySelect = document.getElementById('property_select');
  
  if (customerId) {
    fetch(`/inspections/properties_by_customer?customer_id=${customerId}`)
      .then(response => response.json())
      .then(properties => {
        propertySelect.innerHTML = '<option value="">Selecciona una propiedad</option>';
        properties.forEach(property => {
          const option = document.createElement('option');
          option.value = property.id;
          option.textContent = property.name;
          propertySelect.appendChild(option);
        });
      });
  } else {
    propertySelect.innerHTML = '<option value="">Selecciona una propiedad</option>';
  }
});
</script>